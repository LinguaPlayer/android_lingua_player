<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="org.videolan.medialibrary.media.MediaLibraryItem" />

        <import type="android.view.View" />

        <variable
                name="item"
                type="org.videolan.vlc.gui.preferences.PreferenceItem" />

        <variable
                name="title"
                type="String" />

        <variable
                name="description"
                type="String" />

        <variable
                name="category"
                type="String" />

        <variable
                name="query"
                type="String" />

        <variable
                name="handler"
                type="org.videolan.vlc.gui.preferences.search.PreferenceItemAdapter.ClickHandler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:onClick="@{(v) -> handler.onClick(item)}"
            android:orientation="horizontal">


        <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:duplicateParentState="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="?attr/list_title"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:searchQueryString="@{query}"
                app:searchText="@{title}"
                tools:targetApi="jelly_bean" />

        <TextView
                android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@id/category_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:searchQueryString="@{query}"
                app:searchText="@{description}" />

        <TextView
                android:id="@+id/category_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:text="@{category}"
                android:textColor="@color/orange500"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@id/separator"
                app:layout_constraintEnd_toEndOf="@+id/subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitle" />

        <View
                android:id="@+id/separator"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:background="?attr/default_separator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/onboarding_grey">

    <TextView
        android:id="@+id/onboarding_shadowing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="@string/onboarding_shadowing_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shadowing_mode"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onboarding_shadowing_textview_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:gravity="start"
        android:text="@string/onboarding_shadowing_body"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_shadowing_title" />

    <ImageView
        android:id="@+id/shadowing_mode"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/transparent"
        android:clickable="false"
        android:padding="9dp"
        android:tint="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/onboarding_shadowing_title"
        app:layout_constraintEnd_toStartOf="@+id/onboarding_shadowing_title"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/onboarding_shadowing_title"
        app:srcCompat="@drawable/ic_shadowing_mode"
        tools:tint="@color/white"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/speak_layout_background"
        android:visibility="visible"
        android:layoutDirection="ltr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/prev_caption_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@+id/record_btn"
            app:layout_constraintEnd_toStartOf="@+id/record_btn"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/record_btn"
            app:srcCompat="@drawable/ic_prev_caption_thin_white" />

        <TextView
            android:id="@+id/AB_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="?actionBarItemBackground"
            android:ellipsize="start"
            android:gravity="center"
            android:singleLine="true"
            android:text="40:459"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/increase_start_by_one"
            app:layout_constraintStart_toEndOf="@+id/decrease_start_by_one"
            app:layout_constraintTop_toTopOf="@+id/increase_start_by_one"
            app:layout_constraintVertical_bias="0.4"
            app:srcCompat="@drawable/ic_add_caption" />

        <TextView
            android:id="@+id/AB_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="?actionBarItemBackground"
            android:ellipsize="start"
            android:gravity="center"
            android:singleLine="true"
            android:text="35:564"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/increase_stop_by_one"
            app:layout_constraintEnd_toStartOf="@+id/increase_stop_by_one"
            app:layout_constraintTop_toTopOf="@+id/increase_stop_by_one"
            app:srcCompat="@drawable/ic_add_caption" />

        <ImageView
            android:id="@+id/next_caption_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/video_play_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_next_caption_thin_white" />

        <ImageView
            android:id="@+id/video_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/play"
            android:focusable="true"
            android:padding="2dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="@+id/next_caption_btn"
            app:layout_constraintEnd_toStartOf="@+id/next_caption_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/record_btn"
            app:layout_constraintTop_toTopOf="@+id/next_caption_btn"
            app:srcCompat="@drawable/ic_circle_play_white"
            tools:src="@drawable/ic_circle_play_white" />

        <ImageView
            android:id="@+id/record_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@+id/video_play_btn"
            app:layout_constraintEnd_toStartOf="@+id/video_play_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/prev_caption_btn"
            app:layout_constraintTop_toTopOf="@+id/video_play_btn"
            app:layout_constraintVertical_bias="0.142"
            app:srcCompat="@drawable/ic_circle_microphone_recording_white"
            tools:src="@drawable/ic_circle_microphone_recording_white" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/next_caption_btn"
            app:layout_constraintStart_toStartOf="@+id/prev_caption_btn"
            app:layout_constraintTop_toBottomOf="@+id/AB_stop" />

        <ImageView
            android:id="@+id/recorded_play_pause"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?actionBarItemBackground"
            app:srcCompat="@drawable/ic_circle_play_white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            tools:src="@drawable/ic_circle_mini_play_white" />

        <com.visualizer.amplitude.AudioRecordView
            android:id="@+id/audio_amplitude"
            android:layout_width="150dp"
            android:layout_height="30dp"
            app:chunkColor="@color/white"
            app:chunkMaxHeight="30dp"
            app:chunkMinHeight="2dp"
            app:chunkRoundedCorners="true"
            app:chunkSpace="1dp"
            app:chunkWidth="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/recorded_play_paus"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/recorded_play_pause"
            app:layout_constraintTop_toTopOf="@+id/recorded_play_pause"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/decrease_stop_by_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/AB_stop"
            app:layout_constraintEnd_toStartOf="@+id/AB_stop"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/AB_stop"
            app:srcCompat="@drawable/ic_minus_circle_outline"
            tools:tint="@color/white" />

        <ImageView
            android:id="@+id/increase_stop_by_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/next_caption_btn"
            app:layout_constraintTop_toBottomOf="@+id/next_caption_btn"
            app:srcCompat="@drawable/ic_plus_circle_outline"
            tools:tint="@color/white" />

        <ImageView
            android:id="@+id/decrease_start_by_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/AB_start"
            app:layout_constraintStart_toStartOf="@+id/prev_caption_btn"
            app:layout_constraintTop_toTopOf="@+id/AB_start"
            app:srcCompat="@drawable/ic_minus_circle_outline" />


        <ImageView
            android:id="@+id/increase_start_by_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/decrease_stop_by_one"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/AB_start"
            app:layout_constraintTop_toTopOf="@+id/decrease_stop_by_one"
            app:srcCompat="@drawable/ic_plus_circle_outline" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
